<%= form_with(model: [@goal, @reflection], url: goal_reflections_path, html: { multipart: true }) do |f| %>
  <div class="form-group">
   <%= f.label :今回書くのは %>
    <% day_numbers = ["1日目のふりかえり", "2日目のふりかえり", "3日目のふりかえり"] %>
    <%= f.text_field :day_number, value: day_numbers[@reflection.day_number - 1], readonly: true %>
  </div>
  <div class="form-group">
    <%= f.label :チャレンジしてみての結果と、気付きは %>
    <%= f.text_area :content, rows: 5,placeholder: "<結果>靴は履くことができて散歩までした\n\n<気付き>散歩でも十分楽しかった。でも走ってもみたい。", required: true %>
  </div>
  <div class="form-group">
    <%= f.submit '投稿する', class: 'submit-button' %>
  </div>
<% end %>
