<%= form_with(model: [@goal, @reflection], url: goal_reflections_path, html: { multipart: true }) do |f| %>
  <div class="form-group">
    <%= f.label :day_number %>
    <%= f.select :day_number, [1, 2, 3], prompt: "選択してください" %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, rows: 5, required: true %>
  </div>
  <div class="form-group">
    <%= f.submit '投稿する', class: 'submit-button' %>
  </div>
<% end %>
